<!doctype html>
<html itemscope>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="description" content="Sample app with features of Google Plus API.">

    <meta property="og:image" content="http://signinplus.herokuapp.com/images/button-gplus.png" />

    <title>Social + / Google Plus Api Explorer</title>

    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <script type="text/javascript">
      (function() {
       var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
       po.src = 'https://apis.google.com/js/client:plusone.js?onload=gplus_onload_callback';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
     })();
    </script>
    <%= javascript_include_tag  "initialize" %>
  </body>
</html>